<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/table_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TableRow
            android:id="@+id/coach_trainings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:background="#ed8404">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="32dp"
                android:text="@string/action_current_training"
                android:textColor="#fff" />
    </TableRow>

    <TableRow
            android:id="@+id/coach_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ed8404"
                android:gravity="center"
                android:padding="32dp"
                android:text="@string/action_your_profile"
                android:textColor="#fff" />

    </TableRow>


    <TableRow
            android:id="@+id/coach_calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ed8404"
                android:gravity="center"
                android:padding="32dp"
                android:text="@string/checkCalendar"
                android:textColor="#fff" />


    </TableRow>

    <LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/logo"
                android:textColor="#666"
                android:textSize="33sp"
                android:textStyle="bold" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_CoachLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/logout"
            android:layout_margin="16dp" />


</TableLayout>
